<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

   <com.example.customview.TitleBar
       android:visibility="gone"
       android:id="@+id/title_bar"
       app:title_text="甘零凉"
       app:layout_constraintTop_toTopOf="parent"
       android:layout_width="match_parent"
       android:layout_height="45dp"/>

   <com.example.customview.CustomView
       android:visibility="gone"
       android:id="@+id/custom"
       android:background="#f0f"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintLeft_toLeftOf="parent"
       app:layout_constraintRight_toRightOf="parent"
       app:layout_constraintBottom_toBottomOf="parent"
       android:layout_width="80dp"
       android:layout_height="80dp"/>

   <com.example.customview.InvalidTextView
       android:visibility="gone"
       android:id="@+id/i_tv"
       android:background="#333333"
       android:text="NMSL"
       android:textSize="28sp"
       android:textColor="@color/black"
       android:gravity="center"
       app:layout_constraintTop_toBottomOf="@id/title_bar"
       app:layout_constraintLeft_toLeftOf="parent"
       app:layout_constraintRight_toRightOf="parent"
       android:layout_width="200dp"
       android:layout_height="100dp"/>

   <com.example.customview.RectView
       android:visibility="gone"
       android:layout_marginTop="20dp"
       app:layout_constraintTop_toBottomOf="@id/i_tv"
       app:layout_constraintLeft_toLeftOf="parent"
       app:layout_constraintRight_toRightOf="parent"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       app:rect_color="#0000ff"
       android:padding="20dp"/>

   <com.example.customview.HorizontalView
       android:layout_width="match_parent"
       android:layout_height="match_parent">

      <ListView
          android:id="@+id/list_one"
          android:layout_width="match_parent"
          android:layout_height="match_parent"/>
      <ListView
          android:id="@+id/list_two"
          android:layout_width="match_parent"
          android:layout_height="match_parent"/>
      <ListView
          android:id="@+id/list_three"
          android:layout_width="match_parent"
          android:layout_height="match_parent"/>
      <ListView
          android:id="@+id/list_four"
          android:layout_width="match_parent"
          android:layout_height="match_parent"/>
      <ListView
          android:id="@+id/list_five"
          android:layout_width="match_parent"
          android:layout_height="match_parent"/>
      <ListView
          android:id="@+id/list_six"
          android:layout_width="match_parent"
          android:layout_height="match_parent"/>

   </com.example.customview.HorizontalView>



</androidx.constraintlayout.widget.ConstraintLayout>